@model IEnumerable<Logic.ApplicationUser>

@{
    ViewBag.Title = "SearchForUser";
}

<h2>Index</h2>


    <form asp-controller="Users" asp-action="Index" method="get">
<p>
    Sök efter användare: <input type="text" name="SearchString">
    <input type="submit" value="Sök" />
</p>
</form>
    
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nickname)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nickname)
            </td>
            
            <td>
                @Html.ActionLink("Posts", "Index", "Posts", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>