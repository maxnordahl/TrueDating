@model IEnumerable<Logic.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>Exempel användare:</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nickname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @if (User.Identity.IsAuthenticated)
        {
        <td>
            @Html.ActionLink(item.Nickname, "Index", "Friends", new { id = item.Id }, null)
        </td>
        }
        else
        {
            <td>
                @Html.ActionLink(item.Nickname, "Register", "Account")
            </td>
        }
    </tr>
}

</table>
